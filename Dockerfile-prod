FROM python:3.10-alpine

WORKDIR /app

COPY . /app

ENV FLASK_APP=app.py
# 0: prod 환경
ENV FLASK_DEBUG=0

# Install required packages
RUN apk update && \
    apk add --no-cache gcc musl-dev linux-headers

RUN pip install --upgrade pip

RUN pip install -r requirements.txt

EXPOSE 5000

CMD ["python", "app.py"]